{
  "lint": {
    "rules": {
      "exclude": [
        "require-await"
      ]
    }
  },
  "fmt": {
    "options": {
      "indentWidth": 2,
      "lineWidth": 80,
      "semiColons": true,
      "singleQuote": false
    }
  },
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "imports": {
    "@danet/core": "jsr:@danet/core@2",
    "@std/dotenv": "jsr:@std/dotenv@^0.225.3",
    "@db/mongo": "jsr:@db/mongo@0.33.0",
    "@bartlomieju/postgres": "jsr:@bartlomieju/postgres",
    "@danet/swagger": "jsr:@danet/swagger@2",
    "@std/assert": "jsr:@std/assert@1.0.6",
    "@std/testing": "jsr:@std/testing@1.0.3"
  },
  "tasks": {
    "dev": "deno run --watch --allow-net --allow-read --unstable --allow-env run.ts",
    "launch-server": "deno run --allow-net --allow-read --unstable --allow-env run.ts",
    "test": "deno test -A --unstable spec"
  }
}
