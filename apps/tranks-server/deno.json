{
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "exclude": [
        "require-await"
      ]
    }
  },
  "fmt": {
    "options": {
      "indentWidth": 2,
      "lineWidth": 80,
      "semiColons": true,
      "singleQuote": false
    }
  },
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "nodeModulesDir": "auto",
  "imports": {
    "@danet/core": "jsr:@danet/core@2",
    "@std/dotenv": "jsr:@std/dotenv@^0.225.3",
    "@db/mongo": "jsr:@db/mongo@0.33.0",
    "@bartlomieju/postgres": "jsr:@bartlomieju/postgres",
    "@danet/swagger": "jsr:@danet/swagger@2",
    "@std/assert": "jsr:@std/assert@1.0.6",
    "@danet/validatte": "jsr:@danet/validatte@^0.7.9",
    "@std/testing": "jsr:@std/testing@1.0.3",
    "dotenv": "npm:dotenv@^16.5.0",
    "drizzle-orm": "npm:drizzle-orm@0.44.2",
    "drizzle-kit": "npm:drizzle-kit@0.31.1",
    "pg": "npm:pg@8.16.2",
    "@types/pg": "npm:@types/pg@8.15.4",
    "zod": "npm:zod@3.25.62"
  },
  "tasks": {
    "dev": "deno run --watch --allow-net --allow-read --unstable --allow-env run.ts",
    "launch-server": "deno run --allow-net --allow-read --unstable --allow-env run.ts",
    "test": "deno test -A --unstable spec"
  }
}
